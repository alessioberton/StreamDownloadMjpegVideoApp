<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.aletzz.streamdownloadmjpegvideoapp.MainActivity">

    <Toolbar
        android:id="@+id/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp">

        <com.example.aletzz.streamdownloadmjpegvideoapp.mjpeg.MjpegView
            android:id="@+id/surface_container_video_one"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

        <com.example.aletzz.streamdownloadmjpegvideoapp.mjpeg.MjpegView
            android:id="@+id/surface_container_video_two"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_choice_one"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:padding="12dp"
            android:text="Stream one"/>

        <android.support.v4.widget.Space
            android:layout_width="100dp"
            android:layout_height="1dp" />

        <TextView
            android:id="@+id/btn_choice_two"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:padding="12dp"
            android:text="Stream two"/>

    </LinearLayout>


</LinearLayout>
